<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:padding="5dp">

    <View
        android:id="@+id/divider_1"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@drawable/button_stroke"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:text="About App:"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider_1" />

    <TextView
        android:id="@+id/lblInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="This app will help you to make workout routine. \nYou can choose the starting skill level. That will generate the nubmer of repetitions of the exercises. \nYou can also choose time for your daily reminder for workout. \n\nThis app alows you to gain points and ranks. Every successfully finished workout gives you 30 points and every skipped will take away 10 points. \n\nFuthermore, this App will offer you daily inspirnig quote. \n\nAnd finally, this app allows you to use stopwatch during your workout and allows playing your favorite songs on YouTube or on your Music Player."
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblInfoTitle" />

    <Button
        android:id="@+id/btnCloseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"

        android:background="@drawable/button_stroke"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="@color/colorDirtyWhite"
        android:textSize="20sp"
        app:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblInfoText" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_stroke"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCloseInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>